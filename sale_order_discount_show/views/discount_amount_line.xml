<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_l10n_bo_line_discount_tree_sale_order" model="ir.ui.view">
            <field name="name">view_l10n_bo_line_discount_tree_sale_order</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='order_line']/tree/field[@name='discount']" position="before">
                    <field name="amount_discount"/>
                </xpath>
            </field>
        </record>
    </data>
</odoo>