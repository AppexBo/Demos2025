<odoo>
    <record id="view_account_move_tree_invoice_number" model="ir.ui.view">
        <field name="name">account.move.tree.invoice.number</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <!-- AÃ±adir el campo invoice_number al listado -->
            <xpath expr="//tree/field[@name='invoice_date']" position="after">
                <field name="invoice_number" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>
